{
  "name": "react-electron-mpa",
  "version": "0.0.0",
  "private": true,
  "author": "northwang-lucky",
  "description": "React electron MPA application",
  "main": "index.js",
  "scripts": {
    "cz": "cz",
    "sv": "standard-version",
    "prepare": "rimraf ./.husky && husky install && pnpm husky:pre-commit-hook && pnpm husky:commit-msg-hook",
    "commit:lint": "commitlint --edit",
    "husky:pre-commit-hook": "husky add .husky/pre-commit \"pnpm lint-staged\"",
    "husky:commit-msg-hook": "husky add .husky/commit-msg \"pnpm commit:lint\"",
    "lint-staged": "lint-staged",
    "lint-staged:format": "prettier -w",
    "lint-staged:eslint": "eslint",
    "start:view": "pnpm -F @react-electron-mpa/view start",
    "start:container": "pnpm -F @react-electron-mpa/container start"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/inquirer": "8.2.5",
    "@types/rimraf": "3",
    "chalk": "4.1.2",
    "commitizen": "4.3.0",
    "compressing": "1.9.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-typescript-prettier": "5.0.0",
    "execa": "5.1.1",
    "husky": "8.0.3",
    "inquirer": "8.2.5",
    "inquirer-search-checkbox": "1.0.0",
    "lint-staged": "13.1.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "standard-version": "9.5.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=14.19.3 <16",
    "pnpm": ">=7.20.0 <8"
  }
}
